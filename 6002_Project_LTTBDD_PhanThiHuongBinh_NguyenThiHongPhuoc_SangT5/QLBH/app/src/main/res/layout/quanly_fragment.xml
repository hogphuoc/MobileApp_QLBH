<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomePageFragment"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="287dp"
        android:layout_gravity="center"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:rowCount="3"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="41dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivNhanVien"
                    android:layout_width="49dp"
                    android:layout_height="45dp"
                    android:src="@drawable/team"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tvCategoryManagement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quản lý nhân viên"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivSanPham"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/box"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tvProductManagement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quản lý sản phẩm"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="41dp"
            android:layout_height="87dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivKhachHang"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/rating"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tvCustomerManagement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quản lý khách hàng"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivHoaDon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/bill"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tvInvoiceManagement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Quản lý hóa đơn"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:padding="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivThongKe"
                    android:layout_width="47dp"
                    android:layout_height="43dp"
                    android:src="@drawable/chart"
                    app:tint="@color/text_primary" />

                <TextView
                    android:id="@+id/tvSalesStatistics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thống kê doanh số"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </GridLayout>
</LinearLayout>
